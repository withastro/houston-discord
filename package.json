{
	"name": "houston-bot",
	"private": true,
	"version": "1.0.0",
	"description": "",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"start": "wrangler dev",
		"dev": "wrangler dev",
		"preinstall": "npx only-allow pnpm",
		"lint": "eslint . --report-unused-disable-directives",
		"format": "pnpm run format:code",
		"format:ci": "pnpm run format:imports && pnpm run format:code",
		"format:code": "prettier . -w --cache",
		"format:imports": "organize-imports-cli ./tsconfig.json",
		"register": "tsc -p register.tsconfig.json && node ./dist/register.js",
		"collect:stats": "tsm src/stats.ts"
	},
	"engines": {
		"node": ">=18.18.0",
		"pnpm": ">=8.6.12"
	},
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"@algolia/requester-fetch": "^5.35.0",
		"@discordjs/builders": "^1.11.2",
		"@discordjs/rest": "^2.5.1",
		"@octokit/request-error": "^7.0.0",
		"@octokit/rest": "^22.0.0",
		"algoliasearch": "^5.35.0",
		"discord-api-types": "^0.38.18",
		"discord-interactions": "^4.3.0",
		"discord.js": "^14.21.0",
		"dotenv": "^17.2.1",
		"html-entities": "^2.6.0",
		"itty-router": "^5.0.21",
		"node-schedule": "^2.1.1",
		"organize-imports-cli": "^0.10.0",
		"tsm": "^2.3.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250806.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.32.0",
		"@types/node": "^24.2.0",
		"@types/node-schedule": "^2.1.8",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"wrangler": "^4.28.0"
	},
	"license": "MIT"
}
